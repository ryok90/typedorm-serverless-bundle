{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}